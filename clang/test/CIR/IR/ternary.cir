module  {
  cir.func @blue(%arg0: !cir.bool) -> i32 {
    %0 = cir.ternary(%arg0, true {
      %a = cir.const(0 : i32) : i32
      cir.yield %a : i32
    }, false {
      %b = cir.const(1 : i32) : i32
      cir.yield %b : i32
    }) : i32
    cir.return %0 : i32
  }
}

