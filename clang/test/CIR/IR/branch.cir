// RUN: cir-tool %s | FileCheck %s


func.func @b0() {
  cir.scope {
    cir.loop while(cond :  {
      %0 = cir.cst(true) : !cir.bool
      cir.brcond %0 ^bb1, ^bb2
      ^bb1:
        cir.yield continue
      ^bb2:
        cir.yield
    }, step :  {
      cir.yield
    })  {
      cir.br ^bb1
    ^bb1:
      cir.return
    }
  }
  cir.return
}

