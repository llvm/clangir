// XFAIL: *

module {
  func.func @foo() -> i32 {
    %0 = cir.alloca i32, cir.ptr <i32>, [cinit]
    %1 = cir.cst(1 : i32) : i32
    cir.store %1, %0 : i32, cir.ptr <i32>
    cir.return %1 : i32
  }
}

